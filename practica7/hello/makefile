# Compilaci贸n interfaz IDL
idl:
	idlj -f all Hello.idl

# Compilaci贸n ficheros java
comp:
	javac *.java

nombr:
	orbd -ORBInitialPort 1080

# Ejecuci贸n servidor
exeServidor:
	java HelloServer -ORBInitialPort 1080

# Ejecuci贸n cliente
